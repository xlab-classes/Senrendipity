<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>web</display-name>

  <servlet>
    <servlet-name>register </servlet-name>
    <servlet-class> register </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>forgot_password</servlet-name>
    <servlet-class> forgot_password </servlet-class>
  </servlet>

  <servlet>
    <servlet-name>forgot_verify</servlet-name>
    <servlet-class> forgot_verify </servlet-class>
  </servlet>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class> login </servlet-class>
  </servlet>

  <servlet>
    <servlet-name>register_verify</servlet-name>
    <servlet-class> register_verify </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>register </servlet-name>
    <url-pattern>/register </url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>forgot_password </servlet-name>
    <url-pattern>/forgot_password </url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name> forgot_verify </servlet-name>
    <url-pattern>/forgot_verify </url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name> login </servlet-name>
    <url-pattern>/login </url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name> register_verify </servlet-name>
    <url-pattern>/register_verify </url-pattern>
  </servlet-mapping>


</web-app>
